<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/events_grid_cardView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="10dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/events_grid_image"
            android:layout_width="@dimen/event_grid_image_width"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <me.grantland.widget.AutofitTextView
                android:id="@+id/events_grid_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title"
                app:minTextSize="16sp"
                android:textSize="40sp"
                android:singleLine="true"
                android:layout_marginRight="@dimen/event_grid_image_width"
                />
            <TextView
                android:id="@+id/events_grid_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place"
                android:layout_below="@+id/events_grid_title"/>
        </RelativeLayout>
    </GridLayout>

</android.support.v7.widget.CardView>