<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/clubs_card_view_marginBottom"
    android:id="@+id/clubs_card_view"
    app:cardElevation="@dimen/clubs_card_view_elevation"
    app:cardUseCompatPadding="true"
    android:textAlignment="center"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/clubs_image_view"
            android:contentDescription="Image club"
            android:layout_height="@dimen/clubs_images_view_height"
            android:layout_width="@dimen/clubs_image_view_width"
            android:paddingLeft="30dp"/>

        <TextView
            android:id="@+id/clubs_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/clubs_image_view"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/clubs_text_view_size"
            android:textStyle="bold"
            android:textAlignment="center"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>